local ReGui = loadstring(game:HttpGet('https://raw.githubusercontent.com/depthso/Dear-ReGui/refs/heads/main/ReGui.lua'))()

local Window = ReGui:TabsWindow({
    Title = "Performance",
    Size = UDim2.fromOffset(300, 200),
})
Window:Mount()

-- สร้าง Tab
local FPSTab = Window:CreateTab({ Name = "FPS" })

-- Label แสดง FPS
local FPSLabel = FPSTab:Label({
    Text = "FPS: 0"
})

-- Checkbox สำหรับเปิด/ปิดการอัปเดต FPS
local Enabled = true

FPSTab:Checkbox({
    Value = true,
    Label = "Enable FPS Counter",
    Callback = function(value)
        Enabled = value
    end
})

-- อัปเดต FPS ทุกเฟรม
local last = tick()

RunService.RenderStepped:Connect(function()
    if not Enabled then return end

    local now = tick()
    local fps = 1 / (now - last)
    last = now

    FPSLabel:SetText("FPS: " .. math.floor(fps))
end)
